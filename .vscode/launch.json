{
    "version": "0.2.0",

    "configurations": [
        {
            "name": "npm run dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Attach by Process ID",
            "type": "pwa-node",
            "request": "attach",
            "processId": "${command:PickProcess}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true
        }
    ]
}
